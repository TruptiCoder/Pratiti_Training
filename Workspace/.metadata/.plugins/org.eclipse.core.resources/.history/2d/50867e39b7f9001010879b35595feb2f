package com.trupti.assignment;

import java.util.Scanner;

public class MainApp {
	
	static Employee[] employee = new Employee[50];

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int choice = 0;
		
		while(choice != 5) {
			System.out.println("1. Create 2. Read 3. Update 4. Delete 5. Quit");
			System.out.print("Enter your choice: ");
			choice = sc.nextInt();
			
			switch(choice) {
			case 1: 
			{
				System.out.print("Enter id: ");
				int id = sc.nextInt();
				System.out.print("Enter Name: ");
				String name = sc.next();
				System.out.print("Enter City: ");
				String city = sc.next();
				create(id, name, city);
				break;
			}
				
			case 2:
			{
				System.out.println("1. ReadOne 2. ReadAll");
				System.out.print("Enter your choice: ");
				int ch = sc.nextInt();
				if(ch == 1) {
					System.out.print("Enter id: ");
					int id = sc.nextInt();
					read(id);
				} else if(ch == 2) readAll();
				else System.out.println("Invalid choise! Enter 1 or 2");
				break;
			}
				
			case 3: 
			{
				System.out.print("Enter id: ");
				int id = sc.nextInt();
				System.out.print("Enter new id: ");
				int newId = sc.nextInt();
				update(id, newId);
				break;
			}
				
			case 4:
			{
				System.out.print("Enter id: ");
				int id = sc.nextInt();
				delete(id);
				break;
			}
			
			case 5: 
				System.out.println("Quiting the program!");
				return;
				
			default: 
				System.out.println("Invalid choise! Enter 1 or 2 or 3 or 4 or 5");
				break;
			}
		}
	}
	
	public static void create(int id, String name, String city) {
		if(Employee.count == 50) {
			System.out.println("Employees limit is 50");
			return;
		}
		employee[Employee.count] = new Employee(id, name, city);
	}
	
	public static void update(int id, int newId) {
		for(int i = 0; i < Employee.count; i++) {
			if(employee[i].id == id) {
				employee[i].id = newId;
				System.out.printf("%d is updated to %d", id, newId);
				return;
			}
		}
		System.out.println("Id does not exit!");
	}
	
	public static void read(int id) {
		for(int i = 0; i < Employee.count; i++) {
			if(employee[i].id == id) {
				Employee e = employee[i];
				System.out.println("Id: " + e.id + " Name: " + e.name + " City: " + e.city);
				return;
			}
		}
		System.out.println("Id does not exit");
	}
	
	public static void readAll() {
		for(int i = 0; i < Employee.count; i++) {
			System.out.println("Id: " + employee[i].id + " Name: " + employee[i].name + " City: " + employee[i].city);
		}
	}
	
	public static void delete(int id) {
		for(int i = 0; i < Employee.count; i++) {
			if(employee[i].id == id) {
				for(int j = i; j < Employee.count; j++) {
					employee[j] = employee[j + 1];
				}
				Employee.count--;
				return;
			}
		}
		
		System.out.println("Id does not exit");
	}
}
