package com.trupti.assignment;

public class MainApp {
	
	static Employee[] employee = new Employee[50];

	public static void main(String[] args) {
		
		
	}
	
	public static void create(int id, String name, String city) {
		if(Employee.count == 50) {
			System.out.println("Employees limit is 50");
			return;
		}
		employee[Employee.count] = new Employee(id, name, city);
	}
	
	public static void update(int id, int newId) {
		for(int i = 0; i < Employee.count; i++) {
			if(employee[i].id == id) {
				employee[i].id = newId;
				System.out.printf("%d is updated to %d", id, newId);
				return;
			}
		}
		System.out.println("Id does not exit!");
	}
	
	public static void read(int id) {
		for(int i = 0; i < Employee.count; i++) {
			if(employee[i].id == id) {
				Employee e = employee[i];
				System.out.println("Id: " + e.id + " Name: " + e.name + " City: " + e.city);
				return;
			}
		}
		System.out.println("Id does not exit");
	}
	
	public static void readAll() {
		for(int i = 0; i < Employee.count; i++) {
			System.out.println("Id: " + employee[i].id + " Name: " + employee[i].name + " City: " + employee[i].city);
		}
	}
	
	public static void delete(int id) {
		for(int i = 0; i < Employee.count; i++) {
			if(employee[i].id == id) {
				for(int j = i; j < Employee.count; j++) {
					employee[j] = employee[j + 1];
				}
				Employee.count--;
				return;
			}
		}
		
		System.out.println("Id does not exit");
	}
}
