package com.trupti.assignment;

public class MainApp {
	
	static Employee[] employee = new Employee[50];

	public static void main(String[] args) {
		
		
	}
	
	public static void create(int id, String name, String city) {
		if(Employee.count == 50) {
			System.out.println("Employees limit is 50");
			return;
		}
		employee[Employee.count] = new Employee(id, name, city);
	}
	
	public static void update(int id, int newId) {
		for(int i = 0; i < 50; i++) {
			if(employee[i].id == id) {
				employee[i].id = newId;
				System.out.printf("%d is updated to %d", id, newId);
				return;
			}
		}
		
		System.out.println("Id does not exit!");
	}
}
